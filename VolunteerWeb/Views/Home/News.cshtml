@model List<VolunteerWeb.Models.DataBaseModels.News>

@{
    ViewData["Title"] = "News Page";
}

<div class="text-center">
    <h1 class="display-4">Новини та оновлення</h1>
    <section>
        <h2>Останні новини</h2>
        @if (Model != null && Model.Any())
        {
            <ul>
                @foreach (var item in Model)
                {
                    <li>@item.Title - @item.Content <a href="@item.PhotoPath">Деталі</a>
                        <form method="post" action="/News/DeleteNews">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit">Видалити</button>
                        </form>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>Новини відсутні</p>
        }
    </section>
    <section>
        <h2>Додати нову новину</h2>
        <form method="post" action="/News/AddNews">
            <div class="form-group">
                <label for="title">Заголовок:</label>
                <input type="text" class="form-control" id="title" name="Title" required>
            </div>
            <div class="form-group">
                <label for="content">Зміст:</label>
                <textarea class="form-control" id="content" name="Content" required></textarea>
            </div>
            <div class="form-group">
                <label for="photoPath">Фото шлях:</label>
                <input type="text" class="form-control" id="photoPath" name="PhotoPath" required>
            </div>
            <button type="submit" class="btn btn-primary">Додати</button>
        </form>
    </section>
</div>
